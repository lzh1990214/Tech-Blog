<section class="container text-center">
    <h4 id="welcomeText">My Posts {{userData.first_name}} {{userData.last_name}}</h4>
    <button class="btn btn-primary px-2" data-bs-toggle="modal" data-bs-target="#newPostModal">New Post</button>

    <section class="container mt-5">
        <div class="d-flex justify-content-center row">
            {{#each posts as |post| }}
            <div class="card mb-3" style="width: 60rem;">
                <div class="card-body">
                    {{!-- <a href="/project/{{project.id}}">{{project.name}}</a> --}}
                    <h4 class="card-title">{{post.post_title}}</h4>
                    <!-- Call helper function "format_date" convert the date format -->
                    <h6 class="card-subtitle mb-2 text-muted">Created by {{post.user.first_name}}
                        {{post.user.last_name}} on
                        {{format_date post.date_created}}</h6>
                    <p class="card-text">{{post.post_description}}</p>
                    <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal-{{post.id}}">Edit</a>
                    <a class="btn btn-primary deleteBtn" data-id="{{post.id}}">Delete</a>

                </div>
            </div>

            <!-- Edit post Modal -->
            <div class="modal fade" id="modal-{{post.id}}" tabindex="-1" aria-labelledby="blogpost-{{post.id}}"
                aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title" id="exampleModalLabel">{{post.post_title}}</h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <!-- Call helper function "format_date" convert the date format -->
                            <h6 class="card-subtitle mb-2 text-muted">Created by {{post.user.first_name}}
                                {{post.user.last_name}} on
                                {{format_date post.date_created}}</h6>
                            <form id="editPostForm-{{post.id}}">
                                <div class="mb-3">
                                    <label for="postTitle{{post.id}}" class="form-label">Title</label>
                                    <input type="text" class="form-control" id="postTitle{{post.id}}"
                                        placeholder="{{post.post_title}}">
                                </div>
                                <div class="mb-3">
                                    <label for="postDescription{{post.id}}" class="form-label">Description</label>
                                    <textarea class="form-control" id="postDescription{{post.id}}" rows="3"
                                        placeholder="{{post.post_description}}"></textarea>
                                </div>
                                {{!-- <button type="submit" class="btn btn-primary"
                                    onclick="window.location.href='/api/posts';">Submit</button> --}}
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary savePostBtn" data-id="{{post.id}}"
                                onclick="window.location.href='/api/posts';">Save
                                changes</button>
                        </div>
                    </div>
                </div>
            </div>

            {{/each}}
        </div>



    </section>

    <!-- New post Modal -->
    <div class="modal fade" id="newPostModal" tabindex="-1" aria-labelledby="newBlogPost" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="exampleModalLabel">New Post</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <form id="newPostForm">
                        <div class="mb-3">
                            <label for="newPostTitle" class="form-label">Title</label>
                            <input type="text" class="form-control" id="newPostTitle"
                                placeholder="Example input placeholder">
                        </div>
                        <div class="mb-3">
                            <label for="newPostDescription" class="form-label">Description</label>
                            <textarea class="form-control" id="newPostDescription" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary"
                            onclick="window.location.href='/api/posts';">Submit</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    {{!-- <button type="submit" class="btn btn-primary" id="newPostSubmit">Save changes</button> --}}
                </div>

            </div>
        </div>
    </div>

</section>


